@model ControlCash.Models.Moeda
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Moeda - Tem certeza que deseja excluir esse registro?</h3>
<div>
    <h4>Moeda</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Instituição Financeira")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instituicao.nome)
        </dd>

        <dt>
            @Html.DisplayName("Tipo de Moeda")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipo_Moeda)
        </dd>

        <dt>
            @Html.DisplayName("Cotação")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cotacao)
        </dd>

        <dt>
            @Html.DisplayName("Valor comprado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor_Comprado)
        </dd>

        <dt>
            @Html.DisplayName("Data da Compra")
        </dt>

        <dd>
            @{
                String data = Model.Data_Inicio;
                data = data.Substring(8, 2) + "/" + data.Substring(5, 2) + "/" + data.Substring(0, 4);
            }
            @data
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Excluir" class="btn btn-danger btn-custom" />
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-custom" })
</div>
    }
</div>
