@model ControlCash.Models.Acoes_BDR_FII

@{
    ViewBag.Title = "Delete";
}


    <h3>Ações, BDR e FII - Tem certeza que deseja excluir esse registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Instituição Financeira")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instituicao.nome)
        </dd>

        <dt>
            @Html.DisplayName("Ativo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>

        <dt>
            @Html.DisplayName("Quantidade")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

        <dt>
            @Html.DisplayName("Preço de Compra")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco_Compra)
        </dd>

        <dt>
            @Html.DisplayName("Data da Compra")
        </dt>

        <dd>
            @{
                String data = Model.Data_Inicio;
                data = data.Substring(8, 2) + "/" + data.Substring(5, 2) + "/" + data.Substring(0, 4);
            }
            @data
        </dd>

        <dt>
            @Html.DisplayName("Taxa (%)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Taxa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Excluir" class="btn btn-danger btn-custom" />
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-custom" })
</div>
    }
</div>
