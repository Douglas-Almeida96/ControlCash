@model ControlCash.Models.Instituicao

@{
    ViewBag.Title = "Delete";
}

    <h3>Instituição Financeira - Tem certeza que deseja excluir esse registro?</h3>
<div>
    <h4>Instituicao</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome da Instituição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Excluir" class="btn btn-danger btn-custom" />
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-custom" })
</div>
    }
</div>
