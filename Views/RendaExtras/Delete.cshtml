@model ControlCash.Models.RendaExtra

@{
    ViewBag.Title = "Delete";
}
 
<h3>Renda Extra - Tem certeza que deseja excluir esse registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Data")
        </dt>

        <dd>
            @{
                String data = Model.Date.ToString();
                data = data.Substring(0, 10);
            }
            @data
        </dd>

        <dt>
            @Html.DisplayName("Valor")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

        
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Excluir" class="btn btn-danger btn-custom" />
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary btn-custom" })
</div>
    }
</div>
