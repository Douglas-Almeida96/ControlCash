@model IEnumerable<ControlCash.Models.RendaExtra>

@{
    ViewBag.Title = "Index";
}

<h2>Rendas Extras</h2>

@Html.ActionLink("Novo Registro", "Create", null, new { @class = "btn btn-success btn-custom" })
<div class="form-group"></div>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>
            @Html.DisplayName("Data")
        </th>
        <th>
            @Html.DisplayName("Valor")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @{
                    String data = item.Date.ToString();
                    data = data.Substring(0, 10);
                }
                @data
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-custom" })
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-custom" })
            </td>
        </tr>
    }

</table>
