@model IEnumerable<ControlCash.Models.Moeda>

@{
    ViewBag.Title = "Index";
}

<h2>Moedas</h2>

<p>
    @Html.ActionLink("Novo Registro", "Create", null, new { @class = "btn btn-success btn-custom" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayName("Instituição Financeira")
        </th>
        <th>
            @Html.DisplayName("Tipo de Moeda")
        </th>
        <th>
            @Html.DisplayName("Cotação")
        </th>
        <th>
            @Html.DisplayName("Valor Comprado")
        </th>
        <th>
            @Html.DisplayName("Data de Compra")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Instituicao.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Moeda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cotacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor_Comprado)
        </td>
        <td>
            @{
                String data = item.Data_Inicio;
                data = data.Substring(8, 2) + "/" + data.Substring(5, 2) + "/" + data.Substring(0, 4);
            }
            @data
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MoedaID }, new { @class = "btn btn-warning btn-custom" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.MoedaID }, new { @class = "btn btn-danger btn-custom" })
        </td>
    </tr>
}

</table>
